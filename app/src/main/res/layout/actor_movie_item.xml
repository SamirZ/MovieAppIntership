<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="53.3dp"
    android:layout_marginLeft="10.7dp"
    android:layout_marginStart="10.7dp"
    android:layout_marginRight="6dp"
    android:layout_marginEnd="6dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/actor_movie_image"/>

    <TextView
        android:id="@+id/actor_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMovieItemText"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/actor_movie_role_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextDetails"
        android:textSize="8sp"/>

</LinearLayout>