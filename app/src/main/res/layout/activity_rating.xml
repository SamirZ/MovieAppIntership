<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.zsamir.movieappintership.Common.RatingActivity">

    <TextView
        android:id="@+id/tap_to_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/tap_to_rate"
        android:textColor="@color/colorTextDetails"
        android:gravity="top"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        />

    <RatingBar
        style="@style/MyRatingBar"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_below="@id/tap_to_rate"
        android:id="@+id/rating_bar"
        android:stepSize="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:numStars="10"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="38dp" />

</RelativeLayout>
