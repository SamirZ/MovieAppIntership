<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    android:background="@color/colorMovieDetailsBackground">


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/cinema_movie_star_image"
        android:background="@drawable/star_1_copy_4"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cinema_movie_image"
        android:layout_above="@id/cinema_movie_star_image" />

    <View
        android:layout_above="@id/cinema_movie_star_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient" />

    <TextView
        android:id="@+id/cinema_movie_rating"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="12sp"
        android:textColor="@color/colorMovieItemText"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cinema_movie_star_image"
        android:layout_toEndOf="@id/cinema_movie_star_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cinema_movie_genres"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="12sp"
        android:textColor="@color/colorMovieItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cinema_movie_star_image"/>

    <TextView
        android:id="@+id/cinema_movie_name"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="16sp"
        android:textColor="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cinema_movie_genres"/>


</RelativeLayout>