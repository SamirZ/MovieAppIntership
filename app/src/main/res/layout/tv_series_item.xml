<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:background="@color/colorBlack">

    <ImageView
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/tv_series_image"/>

    <View
        android:layout_above="@+id/tv_series_breakline"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/gradient" />

    <TextView
        android:layout_marginLeft="6.7dp"
        android:layout_marginStart="6.7dp"
        android:id="@+id/tv_series_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_series_genre"
        android:textColor="@color/colorText"
        android:textSize="14sp"/>

    <TextView
        android:layout_marginLeft="6.7dp"
        android:layout_marginStart="6.7dp"
        android:id="@+id/tv_series_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_series_release_date"
        android:textColor="@color/colorMovieItemText"
        android:textSize="11sp"/>

    <TextView
        android:layout_marginLeft="6.7dp"
        android:layout_marginStart="6.7dp"
        android:id="@+id/tv_series_release_date"
        android:layout_marginBottom="6.7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_series_breakline"
        android:textColor="@color/colorMovieItemText"
        android:textSize="11sp"/>

    <View
        android:id="@+id/tv_series_breakline"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:alpha="0.5"
        android:background="@color/colorBreakLine"
        android:layout_below="@id/tv_series_image"/>

    <RelativeLayout
        android:layout_below="@+id/tv_series_image"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="6.7dp"
        android:layout_marginBottom="9.3dp"
        android:layout_marginLeft="6.7dp"
        android:layout_marginStart="6.7dp"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/tv_series_star_image"
            android:background="@drawable/star_1_copy_4"/>

        <TextView
            android:layout_toRightOf="@id/tv_series_star_image"
            android:gravity="top"
            android:layout_margin="3dp"
            android:id="@+id/tv_series_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorMovieItemText"
            android:textSize="11sp"
            />
    </RelativeLayout>

</RelativeLayout>