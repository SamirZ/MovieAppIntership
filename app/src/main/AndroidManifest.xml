<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zsamir.movieappintership">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MoviesActivity"
            android:label="@string/movies_label"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetailsActivity"
            android:label="@string/movies_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ActorProfileActivity"
            android:label="@string/actor_activity_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GalleryActivity"
            android:label="@string/movies_label"
            android:screenOrientation="portrait"/>
        <activity android:name=".ImageDetailsActivity" />
        <activity
            android:name=".TVSeriesActivity"
            android:label="@string/tv_series_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TVSeriesDetailsActivity"></activity>
    </application>

</manifest>